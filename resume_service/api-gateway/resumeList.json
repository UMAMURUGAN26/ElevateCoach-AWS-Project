{
  "paths": {
    "/resumeList": {
      "post": {
        "summary": "Get list of all resume download link by email",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResumeListRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Resume and its version download link generated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResumeDetailedViewResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - invalid input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Missing required field: version"
                }
              }
            }
          },
          "404": {
            "description": "Resume not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "No resume found for user 'abc@gmail.com' with version 'V2'."
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorMessage"
                },
                "example": {
                  "message": "Unexpected error occurred while retrieving the resume."
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ResumeListRequest": {
        "type": "object",
        "required": ["userName", "version"],
        "properties": {
          "userName": {
            "type": "string",
            "example": "abc@gmail.com"
          },
          "version": {
            "type": "string",
            "example": "V2"
          }
        }
      },
      "ResumeDetailedViewResponse": {
        "type": "object",
        "required": ["downloadUrl", "fileName", "version"],
        "properties": {
          "downloadUrl": {
            "type": "string",
            "format": "uri",
            "example": "https://resumeupload/resume.pdf"
          },
          "fileName": {
            "type": "string",
            "example": "resume.pdf"
          },
          "version": {
            "type": "string",
            "example": "V7"
          }
        }
      },
      "ErrorMessage": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Error message describing what went wrong"
          }
        }
      }
    }
  }
}
